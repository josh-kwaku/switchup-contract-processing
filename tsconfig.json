{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@services/*": ["./src/services/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@workflows/*": ["./src/workflows/*"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts", "drizzle.config.ts"],
  "exclude": ["node_modules", "dist", "test", "src/workflows/scripts", "src/workflows/triggers"]
}
